<!--  Here's the animations for the ILS display on the PFD.  Start with selecting which display is required! -->

<animation>
<type>select</type>
    <object-name>gscross</object-name>
    <condition>
        <and>
            <property>instrumentation/nav/has-gs</property>
            <not>
                <property>instrumentation/nav/in-range</property>
            </not>
        </and>
    </condition>
</animation>

<animation>
<type>select</type>
    <object-name>gsserv</object-name>
    <condition>
        <and>
            <property>instrumentation/nav/has-gs</property>
            <property>instrumentation/nav/in-range</property>
        </and>
    </condition>
</animation>

<animation>
<type>select</type>
    <object-name>gsbug</object-name>
    <condition>
        <and>
            <property>instrumentation/nav/has-gs</property>
            <property>instrumentation/nav/in-range</property>
        </and>
    </condition>
</animation>

<animation>
<type>select</type>
    <object-name>locbug</object-name>
    <condition>
        <and>
            <property>instrumentation/nav/has-gs</property>
            <property>instrumentation/nav/in-range</property>
        </and>
    </condition>
</animation>

<animation>
<type>select</type>
    <object-name>locbars</object-name>
    <condition>
        <property>instrumentation/nav/has-gs</property>
    </condition>
</animation>


<!-- Make the GS bug move -->
 <animation>
	 <type>translate</type>
	 <object-name>gsbug</object-name>
	<property>instrumentation/nav/gs-needle-deflection</property>
        <interpolation>
        <entry>
            <ind>-3.5</ind>
            <dep>-0.0145</dep>
        </entry>
        <entry>
            <ind>3.5</ind>
            <dep>0.0145</dep>
        </entry>
        </interpolation>
	 <axis>
		 <x>0</x>
		 <y>0</y>
		 <z>1</z>
	 </axis>
 </animation>

 <animation>
	 <type>translate</type>
	 <object-name>locbug</object-name>
	<property>instrumentation/nav/heading-needle-deflection</property>
        <interpolation><!--
        <entry>
            <ind>-3</ind>
            <dep>-0.0130</dep>
        </entry> -->
        <entry>
            <ind>-10</ind>
            <dep>-0.0110</dep>
        </entry>
        <entry>
            <ind>10</ind>
            <dep>0.0110</dep>
        </entry>
        </interpolation>
	 <axis>
		 <x>0</x>
		 <y>1</y>
		 <z>0</z>
	 </axis>
 </animation>

</PropertyList>

