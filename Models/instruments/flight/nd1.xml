<!--  Here's the animations for the glideslope display on the ND.  Start with selecting which display is required! -->

<animation>
<type>select</type>
    <object-name>gscross</object-name>
    <condition>
        <and>
            <property>instrumentation/nav/has-gs</property>
            <not>
                <property>instrumentation/nav/in-range</property>
            </not>
        </and>
    </condition>
</animation>

<animation>
<type>select</type>
    <object-name>gsserv</object-name>
    <condition>
        <and>
            <property>instrumentation/nav/has-gs</property>
            <property>instrumentation/nav/in-range</property>
        </and>
    </condition>
</animation>

<animation>
<type>select</type>
    <object-name>gsbug</object-name>
    <condition>
        <and>
            <property>instrumentation/nav/has-gs</property>
            <property>instrumentation/nav/in-range</property>
        </and>
    </condition>
</animation>

<!-- Make the GS bug move -->
 <animation>
	 <type>translate</type>
	 <object-name>gsbug</object-name>
	<property>instrumentation/nav/gs-needle-deflection</property>
        <interpolation>
        <entry>
            <ind>-3.5</ind>
            <dep>-0.0145</dep>
        </entry>
        <entry>
            <ind>3.5</ind>
            <dep>0.0145</dep>
        </entry>
        </interpolation>
	 <axis>
		 <x>0</x>
		 <y>0</y>
		 <z>1</z>
	 </axis>
 </animation>

<!-- To/From flag pointer animation -->
<animation>
	<type>select</type>
    <object-name>tofromflag</object-name>
    <condition>
        <and>
	    <not>
            <property>instrumentation/nav/has-gs</property>
	    </not>
            <property>instrumentation/nav/in-range</property>
        </and>
    </condition>
</animation>

  <animation>  
    <type>texrotate</type>
    <object-name>tofromflag</object-name>
    <property>instrumentation/nav/to-from/direction</property>
    <center>
     <x>0.5</x>
     <y>0.5</y>
   </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation> 

