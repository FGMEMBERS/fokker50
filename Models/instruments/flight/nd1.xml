<!-- Here's how we rotate the heading bug, using my nasal bugoff property. -->

  <animation>
    <type>texrotate</type>
    <object-name>hdgbug</object-name>
    <property>autopilot/internal/fdm-heading-bug-error-deg</property>
		<interpolation>
			<entry><ind>-180</ind><dep>-120</dep></entry>
			<entry><ind>-35.01</ind><dep>-120</dep></entry>
			<entry><ind>-35</ind><dep>-35</dep></entry>
			<entry><ind>35</ind><dep>35</dep></entry>
			<entry><ind>35.01</ind><dep>120</dep></entry>
			<entry><ind>179.99</ind><dep>120</dep></entry>
		</interpolation>
    <center>
     <x>0.5</x>
     <y>0.5</y>
   </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>


