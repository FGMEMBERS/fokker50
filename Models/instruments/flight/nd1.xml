  </emission>
</animation>
 <animation>
  <type>material</type>
    <object-name>EADI.bezel</object-name> 
  <emission>
    <red>0.07</red>
    <green>.06</green>
    <blue>0.05</blue>
	<factor-prop>controls/lighting/dome-norm</factor-prop>
  </emission>
</animation>

  
<!-- First to animate the compass card. -->
  <animation>
    <type>texrotate</type>
    <object-name>compass</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <center>
     <x>0.5</x>
     <y>0.5</y>
   </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

<!-- Animation for ADF pointer 1 -->
  <animation>
	<type>texrotate</type> 
    	<object-name>adf1</object-name>
    		<property>instrumentation/adf/indicated-bearing-deg</property>
    		<center>
     		<x>0.5</x>
     		<y>0.5</y>
   		</center>
    		<axis>
      		<x>0</x>
      		<y>0</y>
      		<z>1</z>
    </axis>
</animation>

<!-- Animation for ADF pointer 2 -->
  <animation>
	<type>texrotate</type> 
    	<object-name>adf2</object-name>
