<?xml version="1.0"?>

<PropertyList>
 <path>rmi.ac</path>
 
 <animation>
  <type>material</type>
    <object-name>RMI.compass</object-name> 
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
  <emission>
    <red>0.7</red>
    <green>0.7</green>
    <blue>0.7</blue>
	<factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
</animation>
 <animation>
  <type>material</type>
    <object-name>RMI.bezel</object-name>
  <emission>
    <red>0.07</red>
    <green>.06</green>
    <blue>0.05</blue>
	<factor-prop>controls/lighting/dome-norm</factor-prop>
  </emission>
</animation>

  <animation>
  <type>rotate</type>
    <object-name>needle1</object-name>
   <property>instrumentation/nav/heading-deg[0]</property>
    <axis>
      <x>-1.0</x>
      <y>0</y>
      <z>0.0</z>
    </axis>
  </animation>
    <animation>
  <type>rotate</type>
    <object-name>needle1</object-name>
   <property>orientation/heading-magnetic-deg</property>
    <axis>
      <x>1.0</x>
      <y>0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
  <type>rotate</type>
    <object-name>needle2</object-name>
  <property>instrumentation/nav[1]/heading-deg[0]</property>
    <axis>
      <x>-1.0</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
   <animation>
  <type>rotate</type>
    <object-name>needle2</object-name>
  <property>orientation/heading-magnetic-deg</property>
    <axis>
      <x>1.0</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>RMI.compass</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <axis>
      <x>1.0</x>
      <y>0</y>
      <z>0.0</z>
    </axis>
  </animation>

   
</PropertyList>
