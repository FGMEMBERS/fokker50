<?xml version="1.0"?>
<PropertyList>

	<path>tat.ac</path>

	<!-- TAT Digital Display -->
	<animation>
		<type>textranslate</type>
		<object-name>digit1</object-name>
		<property>environment/temperature-degc</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit2</object-name>
		<property>environment/temperature-degc</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit3</object-name>
		<property>environment/temperature-degc</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- LoD -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>30</max-m>
	</animation>

</PropertyList>

