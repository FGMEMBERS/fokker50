<?xml version="1.0"?>
<PropertyList>

	<path>lg.ac</path>

 <animation>
  <type>material</type>
    <object-name>Cube</object-name>
    <object-name>Plane</object-name>
    <object-name>handle</object-name>
  <emission>
    <red>0.07</red>
    <green>.06</green>
    <blue>0.05</blue>
	<factor-prop>controls/lighting/dome-norm</factor-prop>
  </emission>
</animation>

 <animation>
  <type>material</type>
    <object-name>leftbot</object-name>
    <object-name>lefttop</object-name>
    <object-name>nosebot</object-name>
    <object-name>nosemid</object-name>
    <object-name>nosetop</object-name>
    <object-name>rightbot</object-name>
    <object-name>righttop</object-name>
  <emission>
    <red>0.9</red>
    <green>.9</green>
    <blue>0.9</blue>
	<factor-prop>systems/electrical/serviceable</factor-prop>
  </emission>
</animation>

<animation>
	<type>pick</type>
	<object-name>handle</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-toggle</command>
			<property>controls/gear/gear-down</property>
		</binding>
	</action>
</animation> 

<animation>
		<type>rotate</type>
		<object-name>handle</object-name>
		<property>controls/gear/gear-down</property>
		<factor>40</factor>

		<center>
			<x-m>0.000</x-m><!-- 0.005-->
			<y-m>0</y-m>
			<z-m>-0.022</z-m><!--0.028-->
		</center>

		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>

	</animation>

<!--  This bit governs green 'down' light workings: -->

	<animation>
		<type>textranslate</type>
		<object-name>nosetop</object-name>
		<property>gear/gear/position-norm</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>  

	<animation>
		<type>textranslate</type>
		<object-name>nosemid</object-name>
		<property>gear/gear/position-norm</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>lefttop</object-name>
		<property>gear/gear[1]/position-norm</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation> 

	<animation>
		<type>textranslate</type>
		<object-name>righttop</object-name>
		<property>gear/gear[2]/position-norm</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation> 

</PropertyList>
