
<PropertyList>

 <sim>

  <description>Fokker 50</description>
  <author>Erik Hofman</author>
  <status>beta</status>
 
  <flight-model>jsb</flight-model>
  <aero>fokker50</aero>
  <fuel-fraction>0.5</fuel-fraction>
  
  <systems>
   <electrical>
    <path>Aircraft/Generic/generic-electrical.xml</path>
   </electrical>
  </systems> 
  
  <sound>
   <path>Aircraft/fokker50/Sounds/fokker50-sound.xml</path>
  </sound>

  <model>
   <path>Aircraft/fokker50/Models/fokker50.xml</path>
  </model>

   <chase-distance-m type="double" archive="y">-50.0</chase-distance-m>

  <help>
   <title>Fokker 50</title>
  </help>
 </sim>

 <input>
 <!-- set 7% flap adjustment with each detent -->
  <keyboard>
   <key n="91">
    <name>[</name>
    <desc>Decrease flaps.</desc>
    <binding>
     <command>property-adjust</command>
     <property>/controls/flight/flaps</property>
     <step type="double">-0.143</step>
    </binding>
   </key>
   <key n="93">
    <name>]</name>
    <desc>Increase flaps.</desc>
    <binding>
     <command>property-adjust</command>
     <property>/controls/flight/flaps</property>
     <step type="double">0.143</step>
    </binding>
   </key>
  </keyboard>
 </input>

 <engines>
  <engine n="0">
    <running>true</running>
  </engine>
  <engine n="1">
    <running>true</running>
  </engine>
 </engines>

 <consumables>
  <fuel> <!-- 13365 litres -->
   <tank n="0">
    <level-gal_us archive="y">497.0715</level-gal_us>
   </tank>
   <tank n="1">
    <level-gal_us archive="y">497.0715</level-gal_us>
   </tank>
  </fuel>
 </consumables>

</PropertyList>
